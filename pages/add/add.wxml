<!--pages/add/add.wxml-->
<view>
    <i-panel title="商品图片">
        <wux-cell>
            <wux-upload list-type="picture-card" file-list="{{ fileList }}" url="https://www.shitaidaigou.club/img" bind:change="onChange"
                bind:success="onSuccess" bind:fail="onFail" bind:complete="onComplete" bind:preview="onPreview" name="img">
                <text>Upload</text>
            </wux-upload>
        </wux-cell>
    </i-panel>
    <i-panel title="商品详情">
        <i-input title="标题"></i-input>
        <i-input title="售价" type="number"></i-input> 
    </i-panel>
</view>